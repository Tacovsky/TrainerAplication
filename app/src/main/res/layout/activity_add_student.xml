<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context="com.desafiolatam.traineraplication.views.main.AddStudentActivity">

        <ImageView
            android:id="@+id/photoIv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_account_circle_black_48dp"/>

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/nameEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nombre"/>

        <EditText
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"/>

        <EditText
            android:id="@+id/weightEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Weight"/>

        <EditText
            android:id="@+id/heightEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Height"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/photoBtn"
                android:text="Tomar foto "
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/white"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/fab_margin"
                android:background="@color/tw__composer_deep_gray"
                android:padding="12dp"
                android:drawableRight="@mipmap/ic_photo_camera_white_24dp"/>

            <Button
                android:id="@+id/saveBtn"
                android:text="Guardar"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/fab_margin"
                android:background="@color/tw__composer_deep_gray"
                android:drawableRight="@mipmap/ic_save_white_24dp"
                android:padding="12dp"/>

        </RelativeLayout>

</LinearLayout>
